{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true, // 必须启用以支持项目引用
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "node16",
    "moduleResolution": "node16",
    "types": ["@testing-library/jest-dom"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
